<div class="span3 sidebar-nav">
  <%= render 'shared/menu_manage' %>
</div>
<div class="span8">
<%= link_to 'Criar Curso', new_course_path %>
  <table class="table">
    <tr class="info">
      <td><b><i class="icon-th-list"></i> Administration Posts</b> Cursos</td>
    </tr>
  </table>
  <table class="table table-condensed">
    <tr>
      <th>Titulo</th>
      <th>Instrutor</th>
      <th>Lançamento</th>
      <th>Término</th>
      <th>Editar</th>
      <th>Excluir</th>
    </tr>
  <% @courses.each do |course| %>
    <tr>
      <td><b><%= link_to course.title, course %></b></td>
      <td><%= course.instructor %></td>
      <td><%= course.release_date.strftime("%m/%d/%Y") %></td>
      <td><%= course.end_date.strftime("%m/%d/%Y") %></td>
      <td><%= link_to 'Editar', edit_course_path(course), class: 'btn btn-small btn-success' %></td>
      <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Deseja excluir?' }, class: 'btn btn-small btn-danger' %></td>
    </tr>
  <% end %>
  </table>
  <br />
  </div>