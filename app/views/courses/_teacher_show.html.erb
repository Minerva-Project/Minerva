<div class="span2 sidebar-nav">
  <%= render 'shared/menu_manage' %>
</div>
<div class="span7">
  <table class="table">
    <tr class="info">
      <td><b><i class="icon-th-list"></i> Theacher show courses</b> <%= @course.title %> </td>
    </tr>
  </table>
  <hr>
  <%= notice %><br>

  <p><b>Professor</b></p>
  <% @course.users.each do |user| %>
    <% if user.has_role? :teacher %>
      <%= user.email %>
      <%= link_to 'remove', remove_path(user), method: :delete %><br>
    <% end %>
  <% end %>

  <br><br>
  <p><b>Alunos</b></p>
  <% @course.users.each do |user| %>
    <% if user.has_role? :student %>
      <%= user.email %>
      <%= link_to 'remove', remove_path(user), method: :delete %><br>
    <% end %>
  <% end %>

  <br><br>

  <p>
    <b>Titulo:</b>
    <%= @course.title %>
  </p>
  <p>
    <b>Instrutor:</b>
    <%= @course.instructor %>
  </p>
  <p>
    <b>Lançamento:</b>
    <%= @course.release_date %>
  </p>
  <p>
    <b>End date:</b>
    <%= @course.end_date %>
  </p>
  <p>
    <b>Description:</b>
    <%= @course.description %>
  </p>
  <hr>

    <%= link_to 'Editar', edit_course_path(@course), class: 'btn btn-small btn-success' %>
    <%= link_to 'Voltar', courses_path, class: 'btn btn-small btn-info' %>

</div>

<div class="span3 sidebar-nav">
<table class="table">
  <tr class="warning">
    <td><b>Configurações</b></td>
  </tr>
  <tr>
    <td>
      <%= render 'shared/menu_class' %>
    </td>
  </tr>
</table>
</div>