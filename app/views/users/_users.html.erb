<div class="span3 sidebar-nav">
  <%= render 'shared/menu_manage' %>
</div>

<div class="span8">
<%= link_to 'Criar Usuario', new_user_path %>
  <table class="table">
    <tr class="info">
      <td><b><i class="icon-th-list"></i> Usuários</b></td>
    </tr>
    <%= notice %>
    <table class="table table-condensed">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Status</th>
        <th>Término</th>
        <th>Editar</th>
        <th>Excluir</th>
      </tr>

    <% @users.each do |user| %>

      <tr>
        <td><b><%= link_to user.first_name + " #{user.last_name}", user %></b></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.state %></td>
        <td><%= link_to 'Editar', edit_user_path(user), class: 'btn btn-small btn-success' %></td>
        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Deseja excluir?' }, class: 'btn btn-small btn-danger' %></td>
      </tr>
    <% end %>
    </table>
    <%= link_to "Back", :back, class: "btn btn-small btn-success" %>
    <br />
</div>
