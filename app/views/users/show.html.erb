<%= render 'layouts/header' %>
<div class="container-fluid">
  <div class="row-fluid">
  
    <div class="span3 sidebar-nav">
      <%= render 'shared/menu_manage' %>
    </div>
    
    <div class="span8">
      <table class="table">
        <tr class="info">
          <td><b><i class="icon-th-list"></i> Posts </b>Cursos</td>
        </tr>
      </table>

      <%= @user.role %> <br><br>

      <% @user.courses.each do |c| %>
        <%= c.title  %><br>
      <% end  %>

      <% if @profile != nil %>
        <%= link_to 'Editar perfil', edit_user_profile_path(@user), class: 'btn btn-small btn-info' %>
        <%= link_to 'Mostar perfil', user_profile_path(@user), class: 'btn btn-small btn-info' %> <br>
        <% else %>
        <%= link_to 'Criar Profile', new_user_profile_path(@user) %> <br>
      <% end %>

      <table class="table table-striped">
        <tr>
          <td class="span6"><b>Nome:</b><%= @user.first_name %></td>
        </tr>
        <tr>
          <td class="span6"><b>Sobrenome:</b> <%= @user.last_name %></td>
        </tr>
        <tr>
          <td class="span6"><b>Email:</b> <%= @user.email %></td>
        </tr>
          <tr>
          <td class="span6"><b>Qtd cursos inscrito:</b> <%= @user.courses.size %></td>
        </tr>
        <tr>
          <td class="span6"><b>Telefone:</b> <%= @user.telephone %></td>
        </tr>
        <tr>
          <td class="span6"><b>Sexo:</b> <%= @user.sex %></td>
        </tr>
        <tr>
          <td class="span6"><b>Site:</b> <%= @user.web_site %></td>
        </tr>
        <tr>
          <td class="span6"><b>Status:</b> <%= @user.street_address %></td>
        </tr>
          <tr>
          <td class="span6"><b>Status:</b> <%= @user.city %></td>
        </tr>
          <tr>
          <td class="span6"><b>Status:</b> <%= @user.state %></td>
        </tr>
        <tr>
          <td class="span6"><b>Status:</b> <%= @user.country %></td>
        </tr>
        <tr>
          <td class="span6"><b>Status:</b> <%= @user.observation %></td>
        </tr>
      </table>

      <br />
    </div>
  </div>
</div>
